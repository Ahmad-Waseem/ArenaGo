// The scrollabledragable MENU for Profile Button in Bottom Navbar

import 'package:flutter/material.dart';
import 'package:arenago/views/theme.dart';

class TriggerMenu_ProfileButton extends StatefulWidget {
  @override
  _TriggerMenu_ProfileButtonState createState() => _TriggerMenu_ProfileButtonState();
}

class _TriggerMenu_ProfileButtonState extends State<TriggerMenu_ProfileButton> {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: DraggableScrollableSheet(
        initialChildSize: 0.5,
        minChildSize: 0.25,
        maxChildSize: 1.0,
        builder: (BuildContext context, ScrollController scrollController) {
          return Container(
            color: dBackgroundColor,
            child: ListView(
              controller: scrollController,
              children: [
                ListTile(title: Text('My Account')),
                ListTile(title: Text('Settings')),
                ListTile(title: Text('Info')),
              ],
            ),
          );
        },
      ),
    );
  }
}
